{
  "manifest_version": 3,
  "name": "Apartment â†’ Excel (TS)",
  "version": "0.0.2",
  "description": "Experiment: popup and content script in TypeScript.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://asunnot.oikotie.fi/*",
    "https://www.vuokraovi.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Apartment to Excel"
